<body>
<h1>Listing Top Ipad games</h1>
 
 <div class="games_table">
    <table>
      <tr>
        <th>Rank</th>
        <th>Title</th>
        <th>Downloads</th>
        <th>Price</th>
        <th>Comments</th>
      </tr>
 
      <% @ipad.each do |i| %>
      <tr>
          <td><%= i.rank %></td>
          <td><%= i.title %></td>
          <td><%= i.downloads %></td>
          <td><%= i.price %></td>
          <td><%= i.comments %></td>
      </tr>
      <% end %>
    </table>

    <div class="license">
      <h4>All rigths reserved to Anton Romanov(c)</h4>
      <h3>
        <button><%= link_to "Back to the HomePage", home_path, class: "btn btn-large btn-primary" %></button>
        <button><%= link_to "Back to WebParser for Ipad games", ipadgames_path, class: "btn btn-large btn-primary" %></button>
      </h3>
  </div>

  </div>

</body>